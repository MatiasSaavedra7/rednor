<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../../partials/AdminLTEHead.ejs') %>
  <script src="/js/cuit.js"></script>
  <script src="/js/registroPlanPago.js"></script>
  <script src="/js/formularioPlanPago.js"></script>
  <title>Planes de Pagos & Moratorias</title>
</head>

<body class="hold-transition sidebar-mini">
  <div class="wrapper">
    <!-- Navbar -->
    <%- include('../../partials/navbar.ejs') %>

    <!-- Main Sidebar -->
    <%- include('../../partials/mainSidebar.ejs') %>

    <!-- Control Sidebar -->
    <%- include('../../partials/controlSidebar.ejs') %>

    <!-- Main Content -->
    <main class="content-wrapper">
      <section class="content pt-3">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-10 m-auto">
              <div class="card">
                <div class="card-header">
                  <h3 class="card-title">Planes de Pagos & Moratorias</h3>
                </div>
                <div class="card-body">
                  <form method="#" id="form-crear-plan-pago">

                    <fieldset>
                      <legend class="lead">Informacion General</legend>

                      <div class="form-group">
                        <label for="nro_plan">Número de Plan</label>
                        <input type="text" name="nro_plan" id="nro_plan" class="form-control" />
                      </div>
  
                      <div class="form-group">
                        <label for="cuit">CUIT</label>
                        <input type="text" name="cuit" id="cuit" class="form-control">
                      </div>
  
                      <div class="form-group">
                        <label for="nombre">Nombre y Apellido</label>
                        <input type="text" name="nombre" id="nombre" class="form-control">
                      </div>
  
                      <div class="form-group">
                        <label for="cbu">CBU</label>
                        <input type="text" name="cbu" id="cbu" class="form-control" maxlength="22"> <!--  Longitud 22 caracteres exactos -->
                      </div>
  
                      <div class="form-group">
                        <label for="fecha_consolidacion">Fecha de Consoilidacion</label>
                        <input type="date" name="fecha_consolidacion" id="fecha_consolidacion" class="form-control" />
                      </div>
  
  
                      <div class="form-group">
                        <label for="cantidad_cuotas">Numero de Cuotas</label>
                        <input type="number" name="cantidad_cuotas" id="cantidad_cuotas" class="form-control">
                        <button type="button" class="btn btn-xs btn-primary mt-2" id="generar_cuotas">Generar Cuotas</button>
                      </div>
                    </fieldset>

                    <fieldset>
                      <legend class="lead">Detalle de Cuotas</legend>
                      <div id="contenedor_cuotas">
                        <!-- Aqui se generaran los inputs segun la cantidad de cuotas ingresadas por el usuario -->
                      </div>
                    </fieldset>
                      
                    <!-- Boton Enviar -->
                    <input type="submit" class="btn btn-block btn-primary" />

                    <!-- Boton Volver atras -->
                    <a href="#" class="btn btn-block btn-outline-secondary mt-3">Volver Atrás...</a>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
  <!-- FIN CONTENIDO -->
    </main>
  </div>

  <%- include('../../partials/AdminLTEScripts.ejs') %>
  <!-- bs-custom-file-input -->
  <script src="/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
  <script>
    $(function () {
      bsCustomFileInput.init();
    });
  </script>
</body>
</html>