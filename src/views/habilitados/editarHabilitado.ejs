<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/AdminLTEHead.ejs') %>
    <title>REDNOR - Editar Habiltiado <%= habilitado.nombre %></title>
  </head>
  <body class="hold-transition sidebar-mini">
    <div class="wrapper">
      <!-- Navbar -->
      <%- include('../partials/navbar.ejs') %>
    
      <!-- Main Sidebar -->
      <%- include('../partials/mainSidebar.ejs') %>
  
      <!-- Control Sidebar -->
       <%- include('../partials/controlSidebar.ejs') %>
  
      <!-- MAIN -->
      <main class="content-wrapper">
        <section class="content pt-3">
          <div class="container-fluid">
            <div class="row">
              <div class="col-lg-8 m-auto">
                <div class="card">
                  <div class="card-header">
                    <h3 class="card-title">Editar Habilitado <%= habilitado.nombre %></h3>
                  </div>
                  <div class="card-body">
                    <form action="/habilitados/editar/<%= habilitado.id %>?_method=PUT" method="post">
                      
                      <div class="form-group">
                        <label for="id_cliente">ID Cliente</label>
                        <input type="number" name="id_cliente" id="id_cliente" value="<%= habilitado.id_cliente %>" class="form-control" readonly>
                      </div>

                      <div class="form-group">
                        <label for="nombre">Nombre: </label>
                        <input type="text" name="nombre" id="nombre" class="form-control" value="<%= habilitado.nombre ? habilitado.nombre : (locals.old && old.nombre ? old.nombre : "") %>">
                        <% if (locals.errors && errors.nombre) { %>
                         <p class="text-danger"><%= errors.nombre.msg %></p>
                        <% } %>
                      </div>
            
                      <div class="form-group">
                        <label for="telefono">Telefono: </label>
                        <input type="number" name="telefono" id="telefono" class="form-control" value="<%= habilitado.telefono ? habilitado.telefono : (locals.old && old.telefono ? old.telefono : "") %>">
                        <% if (locals.errors && errors.telefono) { %>
                         <p class="text-danger"><%= errors.telefono.msg %></p>
                        <% } %>
                      </div>
            
                      <div class="form-group">
                        <label for="email">Email: </label>
                        <input type="email" name="email" id="email" class="form-control" value="<%= habilitado.email ? habilitado.email : (locals.old && old.email ? old.email : "") %>">
                        <% if (locals.errors && errors.email) { %>
                         <p class="text-danger"><%= errors.email.msg %></p>
                        <% } %>
                      </div>
            
                      <div class="form-group">
                        <label for="puesto">Puesto: </label>
                        <input type="text" name="puesto" id="puesto" class="form-control" value="<%= habilitado.puesto ? habilitado.puesto : (locals.old && old.puesto ? old.puesto : "") %>">
                        <% if (locals.errors && errors.puesto) { %>
                         <p class="text-danger"><%= errors.puesto.msg %></p>
                        <% } %>
                      </div>
                      
                      <div class="form-group">
                        <label for="ubicacion">Ubicacion: </label>
                        <input type="text" name="ubicacion" id="ubicacion" class="form-control" value="<%= habilitado.ubicacion ? habilitado.ubicacion : (locals.old && old.ubicacion ? old.ubicacion : "") %>">
                        <% if (locals.errors && errors.ubicacion) { %>
                         <p class="text-danger"><%= errors.ubicacion.msg %></p>
                        <% } %>
                      </div>
                      <input type="submit" value="Editar Informacion" class="btn btn-block btn-primary">
                      
                      <a href="#" data-toggle="modal" data-target="#modal-eliminar-habilitado" class="btn btn-block btn-outline-danger mt-3">Eliminar Habilitado</a>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      </main>
      <!-- FIN MAIN -->

      <!-- Modal Eliminar Habilitado -->
      <div class="modal fade" id="modal-eliminar-habilitado">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title">Eliminar Habilitado</h4>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <form action="/habilitados/eliminar/<%= habilitado.id %>?_method=DELETE" method="post">
              <div class="modal-body">
                <p>Â¿Estas seguro de eliminar a <%= habilitado.nombre %>?</p>
              </div>

              <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-outline-danger">Eliminar</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <%- include('../partials/AdminLTEScripts.ejs') %>
  </body>
</html>