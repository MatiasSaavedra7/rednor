<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="/css/formulario.css" />
    <script src="/js/registroCliente.js"></script>
    <title>REDNOR -  Editar cliente</title>
  </head>
  <body>
    <%- include('../partials/header.ejs') %>
    <!-- MAIN -->
    <main class="main-container">
      <!-- ASIDE -->
      <%- include('../partials/aside.ejs') %>
      <!-- FIN ASIDE -->

      <!-- CONTENIDO -->
      <section class="main-content">
        <h1>EDITAR INFORMACION</h1>
        <div class="form-container">
          <form action="/clientes/editar/<%= cliente.id %>?_method=PUT" method="post" enctype="multipart/form-data">
            <h4>Datos personales</h4>
            <div>
              <label for="nombre">Nombre</label>
              <input type="text" name="nombre" id="nombre" value="<%= locals.errors && errors.nombre ? "" : (locals.old && old.nombre ? old.nombre : cliente.nombre) %>" /> 
              <% if (locals.errors && errors.nombre) { %>
              <p class="feedback-errors"><%= errors.nombre.msg %></p>
              <% } %>
            </div>

            <div>
              <label for="id_tipo_cliente">Tipo</label>
              <select name="id_tipo_cliente" id="id_tipo_cliente">
                <option value="" disabled selected hidden>
                  Selecciona un tipo
                </option>
                <% tipos.forEach(tipo => { %>
                <option value="<%= tipo.id %>" <%= cliente.id_tipo_cliente == tipo.id ? "selected" : "" %>>
                  <%= tipo.nombre %>
                </option>
                <% }) %>
              </select>
              <% if (locals.errors && errors.id_tipo) { %>
              <p class="feedback-errors"><%= errors.id_tipo.msg %></p>
              <% } %>
            </div>
            
            <br />
            <hr />

            <h4>Datos de contacto</h4>

            <div>
              <label for="email">Email</label>
              <input type="email" name="email" id="email" value="<%= locals.errors && errors.email ? "" : (locals.old && old.email ? old.email : cliente.email) %>" />
              <% if (locals.errors && errors.email) { %>
                <p class="feedback-errors"><%= errors.email.msg %></p>
              <% } %>
            </div>

            <div>
              <label for="telefono">Telefono</label>
              <input type="number" name="telefono" id="telefono" value="<%= locals.errors && errors.telefono ? "" : (locals.old && old.telefono ? old.telefono : cliente.telefono) %>" />
              <% if(locals.errors && errors.telefono) { %>
                <p class="feedback-errors"><%= errors.telefono.msg %></p>
              <% } %>
            </div>

            <div>
              <label for="ciudad">Ciudad</label>
              <input type="text" name="ciudad" id="ciudad" value="<%= locals.errors && errors.ciudad ? "" : (locals.old && old.ciudad ? old.ciudad : cliente.ciudad) %>" />
              <% if (locals.errors && errors.ciudad) { %>
                <p class="feedback-errors"><%= errors.ciudad.msg %></p>
              <% } %>
            </div>

            <div>
              <label for="direccion">Direccion</label>
              <input type="text" name="direccion" id="direccion" value="<%= locals.errors && errors.direccion ? "" : (locals.old && old.direccion ? old.direccion : cliente.direccion) %>" />
              <% if(locals.errors && errors.direccion) { %>
                <p class="feedback-errors"><%= errors.direccion.msg %></p>
              <% } %>
            </div>

            <div>
              <label for="cuit">CUIT (Sin guiones)</label>
              <input type="text" name="cuit" id="cuit" value="<%= locals.errors && errors.cuit ? "" : (locals.old && old.cuit ? old.cuit : cliente.cuit) %>">
              <% if (locals.errors && errors.cuit) { %>
               <p class="feedback-errors"><%= errors.cuit.msg %></p>
              <% } %>
            </div>
            
            <div>
              <label for="inscripcion_afip">Inscripcion AFIP</label>
              <input type="file" name="inscripcion_afip" id="inscripcion_afip">
            </div>

            <div>
              <label for="condicion_afip">Condicion AFIP</label>
              <input type="file" name="condicion_afip" id="condicion_afip">
            </div>

            <div>
              <label for="formulario_005">Formulario 005</label>
              <input type="file" name="formulario_005" id="formulario_005">
            </div>
            <br />
            <input type="submit" value="EDITAR" />
          </form>
        </div>
      </section>
      <!-- FIN CONTENIDO -->
    </main>
    <!-- FIN MAIN -->
  </body>
</html>
