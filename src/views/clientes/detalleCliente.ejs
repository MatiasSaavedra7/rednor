<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="/css/detalleCliente.css" />
    <title>REDNOR - Detalle del Cliente <%= cliente.nombre %></title>
  </head>
  <body>
    <%- include('../partials/header.ejs') %>
    <!-- MAIN -->
    <main class="main-container">
      <!-- ASIDE -->
      <%- include('../partials/aside.ejs') %>
      <!-- FIN ASIDE -->

      <!-- CONTENIDO -->
      <section class="main-content">
        <div class="client-container">
          <h3>Informacion del Cliente</h3>
          <div>
            <p><span>Nombre: </span><%= cliente.nombre %></p>
            <p><span>Email: </span><%= cliente.contacto.email %></p>
            <p><span>Telefono: </span><%= cliente.contacto.telefono %></p>
            <p><span>Ciudad: </span><%= cliente.contacto.ciudad %></p>
            <p><span>Direccion: </span><%= cliente.contacto.direccion %></p>
            <p><span>Tipo: </span><%= cliente.tipo.nombre %></p>
          </div>
        </div>
      </section>
      <!-- FIN CONTENIDO -->
    </main>
    <!-- FIN MAIN -->
  </body>
</html>
