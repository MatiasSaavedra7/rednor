<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/AdminLTEHead.ejs') %>
    <%- include('../partials/AdminLTEHeadTables.ejs') %>
    <!-- <link rel="stylesheet" href="/css/tables.css" /> -->
    <!-- <link rel="stylesheet" href="/css/clientes.css" /> -->
    <!-- <script src="/js/clientes.js"></script> -->
    <title>REDNOR - Listado de Clientes</title>
  </head>
  <body class="hold-transition sidebar-mini">
    <div class="wrapper">
      <!-- Navbar -->
      <%- include('../partials/navbar.ejs') %>
  
      <!-- Main Sidebar -->
      <%- include('../partials/mainSidebar.ejs') %>
  
      <!-- Control Sidebar -->
       <%- include('../partials/controlSidebar.ejs') %>
       
      <!-- Main Content -->
      <main class="content-wrapper">
        <section class="content mt-3">
          <div class="container-fluid">
            <div class="row">
              <div class="col-12">
                <div class="card">
                  <div class="card-header">
                    <h3 class="card-title">Clientes</h3>
                    <a href="/clientes/crear" class="btn btn-outline-primary float-right">Crear</a>
                  </div>
                  <div class="card-body">
                    <table id="clientes" class="table table-bordered table-hover">
                      <thead>
                        <tr>
                          <th>ID</th>
                          <th>Nombre</th>
                          <th>Tipo</th>
                          <th>Email</th>
                          <th>Detalles</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% clientes.forEach(cliente => { %>
                          <tr>
                            <td><%= cliente.id %></td>
                            <td><%= cliente.nombre %></td>
                            <td><%# cliente.tipo.nombre %></td>
                            <td><%= cliente.email %></td>
                            <td><a href='/clientes/detalle/<%= cliente.id %>'>Ver m√°s</a></td>
                          </tr>
                          <% }); %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      </main>
    </div>
    <%- include('../partials/AdminLTEScripts.ejs') %>
    <%- include('../partials/AdminLTEScriptsTables.ejs') %>
    <script>
      $(function () {
        $("#clientes").DataTable({
          "responsive": true, "lengthChange": false, "autoWidth": false, "pageLength": 50,
          "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
        }).buttons().container().appendTo('#clientes_wrapper .col-md-6:eq(0)');
      });
    </script>
  </body>
</html>
