<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="/css/formulario.css" />
    <title>REDNOR - Registrar nuevo Cliente</title>
  </head>
  <body>
    <%- include('../partials/header.ejs') %>
    <!-- MAIN -->
    <main class="main-container">
      <!-- ASIDE -->
      <%- include('../partials/aside.ejs') %>
      <!-- FIN ASIDE -->

      <!-- CONTENIDO -->
      <section class="main-content">
        <h1>REGISTRAR CLIENTE</h1>
        <div class="form-container">
          <form action="/clientes/crear" method="post">
            <h4>Datos personales</h4>
            <div>
              <label for="nombre">Nombre</label>
              <input type="text" name="nombre" id="nombre" value="<%= locals.old && old.nombre ? old.nombre : "" %>" /> 
              <% if (locals.errors && errors.nombre) { %>
              <p class="feedback-errors"><%= errors.nombre.msg %></p>
              <% } %>
            </div>

            <div>
              <label for="id_tipo">Tipo</label>
              <select name="id_tipo" id="id_tipo">
                <option value="" disabled selected hidden>
                  Selecciona un tipo
                </option>
                <% tipos.forEach(tipo => { %>
                <option value="<%= tipo.id %>"><%= tipo.nombre %></option>
                <% }) %>
              </select>
              <% if (locals.errors && errors.id_tipo) { %>
              <p class="feedback-errors"><%= errors.id_tipo.msg %></p>
              <% } %>
            </div>
            
            <br />
            <hr />

            <h4>Datos de contacto</h4>

            <div>
              <label for="email">Email</label>
              <input type="email" name="email" id="email" value="<%= locals.old && old.email ? old.email : "" %>" />
              <% if (locals.errors && errors.email) { %>
                <p class="feedback-errors"><%= errors.email.msg %></p>
              <% } %>
            </div>

            <div>
              <label for="telefono">Telefono</label>
              <input type="number" name="telefono" id="telefono" value="<%= locals.old && old.telefono ? old.telefono : "" %>" />
              <% if(locals.errors && errors.telefono) { %>
                <p class="feedback-errors"><%= errors.telefono.msg %></p>
              <% } %>
            </div>

            <div>
              <label for="ciudad">Ciudad</label>
              <input type="text" name="ciudad" id="ciudad" value="<%= locals.old && old.ciudad ? old.ciudad : "" %>" />
              <% if (locals.errors && errors.ciudad) { %>
                <p class="feedback-errors"><%= errors.ciudad.msg %></p>
              <% } %>
            </div>

            <div>
              <label for="direccion">Direccion</label>
              <input type="text" name="direccion" id="direccion" value="<%= locals.old && old.direccion ? old.direccion : "" %>" />
              <% if(locals.errors && errors.direccion) { %>
                <p class="feedback-errors"><%= errors.direccion.msg %></p>
              <% } %>
            </div>

            <div>
              <label for="habilitado">Habilitado</label>
              <select name="habilitado" id="habilitado">
                <option value="" disabled selected hidden>
                  Selecciona una opcion
                </option>
                <option value="true">Si</option>
                <option value="false">No</option>
              </select>
              <% if (locals.errors && errors.id_tipo) { %>
              <p class="feedback-errors"><%= errors.id_tipo.msg %></p>
              <% } %>
            </div>
            <br />
            <input type="submit" />
          </form>
        </div>
      </section>
      <!-- FIN CONTENIDO -->
    </main>
    <!-- FIN MAIN -->
  </body>
</html>
