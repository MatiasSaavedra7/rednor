<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/AdminLTEHead.ejs') %>
  <%- include('../partials/AdminLTEHeadTables.ejs') %>
  <title>REDNOR</title>
</head>
<body class="hold-transition sidebar-mini">
  <div class="wrapper">
    <!-- Navbar -->
    <%- include('../partials/navbar.ejs') %>
      
    <!-- Main Sidebar -->
    <%- include('../partials/mainSidebar.ejs') %>

    <!-- Control Sidebar -->
      <%- include('../partials/controlSidebar.ejs') %>
    <!-- MAIN -->
    <main class="content-wrapper">
      <section class="content mt-3">
        <div class="container-fluid">
          <div class="row">
            <div class="col-12">
              <div class="card">
                <div class="card-header">
                  <h3 class="card-title">Taller de Equipos Propios</h3>
                </div>
                <div class="card-body">
                  <table id="taller" class="table table-bordered table-hover">
                    <thead>
                      <tr>
                        <th>Equipo</th>
                        <th>Ingreso</th>
                        <th>Egreso</th>
                        <th>Detalles</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% ingresos.forEach(ingreso => { %>
                        <tr>
                          <td>
                            <%= ingreso.equipo.marca %>
                            <%= ingreso.equipo.modelo %>
                            <%= ingreso.equipo.numero_serie %>
                          </td>
                          <td>
                            <%= ingreso.fecha_ingreso %>
                          </td>
                          <td>
                            <% if (ingreso.egreso) { %>
                              <%= ingreso.egreso.fecha_egreso %>
                            <% } else { %>
                              -
                            <% } %>
                          </td>
                          <td>
                            <a href="/taller/detalle/<%= ingreso.id %>">Ver m√°s...</a>
                          </td>
                        </tr>
                      <% }); %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>
    <!-- FIN MAIN -->
  </div>

  <%- include('../partials/AdminLTEScripts.ejs') %>
  <%- include('../partials/AdminLTEScriptsTables') %>
  <script>
    $(function () {
      $("#taller").DataTable({
        "responsive": true, "lengthChange": false, "autoWidth": false,
        "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
      }).buttons().container().appendTo('#taller_wrapper .col-md-6:eq(0)');
    });
  </script>
</body>
</html>
