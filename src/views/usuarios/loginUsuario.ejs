<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/AdminLTEHead.ejs') %>
    <title>REDNOR - Iniciar Sesion</title>
  </head>
  <body class="hold-transition login-page dark-mode">
    <div class="login-box">
      <div class="card card-outline card-primary">
        <div class="card-header text-center">
          <a href="/" class="h1"><b>Rednor</b> Dashboard</a>
        </div>
        <div class="card-body">
          <p class="login-box-msg">Iniciar Sesion</p>
    
          <form action="/usuarios/login" method="post">

            <!-- Email del Usuario -->
            <div class="input-group mb-3">
              <input type="email" name="email" class="form-control" placeholder="Email">
              <div class="input-group-append">
                <div class="input-group-text">
                  <span class="fas fa-envelope"></span>
                </div>
              </div>
            </div>
            <% if (locals.errors && errors.email) { %>
              <p class="text-danger text-center"><%= errors.email.msg %></p>
            <% } %>

            <!-- ContraseÃ±a -->
            <div class="input-group mb-3">
              <input type="password" name="password" class="form-control" placeholder="Password">
              <div class="input-group-append">
                <div class="input-group-text">
                  <span class="fas fa-lock"></span>
                </div>
              </div>
            </div>
            <% if (locals.errors && errors.password) { %>
              <p class="text-danger text-center"><%= errors.password.msg %></p>
            <% } %>

            <% if (locals.errors && errors.login) { %>
              <p class="text-danger text-center"><%= errors.login.msg %></p>
            <% } %>

            <!-- Boton Iniciar Sesion y checkbox Recordarme -->
            <div class="row">
              <div class="col">
                <div class="icheck-primary">
                  <input type="checkbox" id="remember">
                  <label for="remember">
                    Recordarme
                  </label>
                </div>
              </div>
              <div class="col">
                <button type="submit" class="btn btn-primary btn-block">Iniciar Sesion</button>
              </div>
            </div>
          </form>
    
          <p class="mt-1 mb-1">
            <a href="/usuarios/registro" class="text-center">Crear nueva cuenta</a>
          </p>
        </div>
      </div>
    </div>
    
    <%# include('../partials/AdminLTEScripts') %>
  </body>
</html>
