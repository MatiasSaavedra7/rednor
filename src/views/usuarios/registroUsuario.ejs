<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/AdminLTEHead.ejs') %>
    <link rel="stylesheet" href="/css/formulario.css" />
    <script src="/js/registroCliente.js"></script>
    <title>REDNOR - Registrar nuevo Cliente</title>
  </head>
  <body class="hold-transition sidebar-mini">
    <div class="wrapper">
      <!-- Navbar -->
      <%- include('../partials/navbar.ejs') %>
      
      <!-- Main Sidebar -->
      <%- include('../partials/mainSidebar.ejs') %>
  
      <!-- Control Sidebar -->
       <%- include('../partials/controlSidebar.ejs') %>
      <!-- MAIN -->
      <main class="content-wrapper">
        <!-- CONTENIDO -->
        <section class="main-content">
          <h1>REGISTRO</h1>
          <div class="form-container">
            <form action="/usuarios/registro" method="post">
              <div>
                <label for="nombre">Nombre</label>
                <input type="text" name="nombre" id="nombre" value="<%= locals.old && old.nombre ? old.nombre : "" %>" /> 
                <% if (locals.errors && errors.nombre) { %>
                <p class="feedback-errors"><%= errors.nombre.msg %></p>
                <% } %>
              </div>
  
              <div>
                <label for="apellido">Apellido</label>
                <input type="text" name="apellido" id="apellido" value="<%= locals.old && old.apellido ? old.apellido : "" %>" /> 
                <% if (locals.errors && errors.apellido) { %>
                <p class="feedback-errors"><%= errors.apellido.msg %></p>
                <% } %>
              </div>
  
              <div>
                <label for="usuario">Nombre de Usuario</label>
                <input type="usuario" name="usuario" id="usuario" value="<%= locals.old && old.usuario ? old.usuario : "" %>" />
                <% if (locals.errors && errors.usuario) { %>
                  <p class="feedback-errors"><%= errors.usuario.msg %></p>
                <% } %>
              </div>
  
              <div>
                <label for="password">Contraseña</label>
                <input type="password" name="password" id="password" value="<%= locals.old && old.password ? old.password : "" %>" /> 
                <% if (locals.errors && errors.password) { %>
                <p class="feedback-errors"><%= errors.password.msg %></p>
                <% } %>
              </div>
  
              <div>
                <label for="rePassword">Confirmar contraseña</label>
                <input type="password" name="rePassword" id="rePassword" value="<%= locals.old && old.rePassword ? old.rePassword : "" %>" /> 
                <% if (locals.errors && errors.rePassword) { %>
                <p class="feedback-errors"><%= errors.rePassword.msg %></p>
                <% } %>
              </div>
              <br />
              <input type="submit" value="Registrarse" />
            </form>
          </div>
        </section>
        <!-- FIN CONTENIDO -->
      </main>
      <!-- FIN MAIN -->
    </div>

    <%- include('../partials/AdminLTEScripts.ejs') %>
  </body>
</html>
