<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="/css/formulario.css" />
    <title>REDNOR - Registrar nuevo Cartucho</title>
  </head>
  <body>
    <%- include('../partials/header.ejs') %>
    <!-- MAIN -->
    <main class="main-container">
      <!-- ASIDE -->
      <%- include('../partials/aside.ejs') %>
      <!-- FIN ASIDE -->

      <!-- CONTENIDO -->
      <section class="main-content">
        <h1>REGISTRAR CARTUCHO</h1>
        <div class="form-container">
          <form action="/repuestos/crear" method="post">
            <h4>Datos del Cartucho</h4>
            <div>
              <label for="nombre">Nombre</label>
              <input 
                type="text" 
                name="nombre" 
                id="nombre" 
                value="<%= locals.old && old.nombre ? old.nombre : "" %>"/>
              <% if (locals.errors && errors.nombre) { %>
               <p class="feedback-errors"><%= errors.nombre.msg %></p>
              <% } %>
            </div>

            <div>
              <label for="etiqueta">Etiqueta</label>
              <input 
                type="text" 
                name="etiqueta" 
                id="etiqueta" 
                value="<%= locals.old && old.etiqueta ? old.etiqueta : "" %>"/>
              <% if (locals.errors && errors.etiqueta) { %>
               <p class="feedback-errors"><%= errors.etiqueta.msg %></p>
              <% } %>
            </div>

            <div>
              <label for="SKU">SKU</label>
              <input 
                type="text" 
                name="SKU" 
                id="SKU" 
                value="<%= locals.old && old.SKU ? old.SKU : "" %>"/>
              <% if (locals.errors && errors.SKU) { %>
               <p class="feedback-errors"><%= errors.SKU.msg %></p>
              <% } %>
            </div>

            <div>
              <label for="stock">Stock</label>
              <input 
                type="number" 
                name="stock" 
                id="stock" 
                value="<%= locals.old && old.stock ? old.stock : "" %>"/>
              <% if (locals.errors && errors.stock) { %>
               <p class="feedback-errors"><%= errors.stock.msg %></p>
              <% } %>
            </div>

            <div>
              <label for="categoria">Categoria</label>
              <select name="categoria" id="categoria">
                <option value="" selected disabled hidden>
                  Elegir una opcion
                </option>
                <% categorias.forEach(categoria => { %>
                  <option value="<%= categoria.id %>"><%= categoria.nombre %></option>
                <% }) %>
              </select>
              <% if (locals.errors && errors.categoria) { %>
               <p class="feedback-errors"><%= errors.categoria.msg %></p>
              <% } %>
            </div>
            <br />
            <input type="submit" />
          </form>
        </div>
      </section>
      <!-- FIN CONTENIDO -->
    </main>
    <!-- FIN MAIN -->
  </body>
</html>
